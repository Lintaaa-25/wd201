<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('header') %>

  <main>
    <section>
      <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" name="title" placeholder="Enter todo title" required />
        <input type="date" name="dueDate" required />
        <button type="submit">Add Todo</button>
      </form>
    </section>

    <!-- Overdue Section -->
    <section>
      <h2>Overdue</h2>
      <p id="count-overdue"><%= overdue.length %> overdue tasks</p>
      <table>
        <% overdue.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input 
                  type="checkbox" 
                  id="todo-<%= todo.id %>" 
                  onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)"
                  <%= todo.completed ? 'checked' : '' %>
                />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Today Section -->
    <section>
      <h2>Due Today</h2>
      <p id="count-due-today"><%= dueToday.length %> tasks due today</p>
      <table>
        <% dueToday.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input 
                  type="checkbox" 
                  id="todo-<%= todo.id %>" 
                  onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)"
                  <%= todo.completed ? 'checked' : '' %>
                />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Later Section -->
    <section>
      <h2>Due Later</h2>
      <p id="count-due-later"><%= dueLater.length %> tasks due later</p>
      <table>
        <% dueLater.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input 
                  type="checkbox" 
                  id="todo-<%= todo.id %>" 
                  onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)"
                  <%= todo.completed ? 'checked' : '' %>
                />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Completed Items Section -->
    <section>
      <h2>Completed</h2>
      <p id="count-completed"><%= completedItems.length %> completed tasks</p>
      <table>
        <% completedItems.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input 
                  type="checkbox" 
                  id="todo-<%= todo.id %>" 
                  onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)"
                  <%= todo.completed ? 'checked' : '' %>
                />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

  </main>

  <%- include('footer') %>

<script>
  async function deleteTodo(id) {
    await fetch(`/todos/${id}`, {
      method: "DELETE",
    });
    window.location.reload();
  }

  async function toggleCompleted(id, completed) {
    await fetch(`/todos/${id}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        completed: !completed,
      }),
    });
    window.location.reload();
  }
</script>

</body>
</html>
