<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <meta name="csrf-token" content="<%= csrfToken %>">
</head>
<body>
  <header>
    <h1>Todo Application</h1>
  </header>

  <form method="POST" action="/todos" id="todoForm">
    <input type="text" name="title" placeholder="Title" required />
    <input type="date" name="dueDate" required />
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit">Add Todo</button>
  </form>

  <section>
    <h2>Overdue (<span id="overdue-count"><%= overdue.length %></span>)</h2>
    <ul>
      <% overdue.forEach(todo => { %>
        <li>
          <label for="todo-<%= todo.id %>">
            <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="updateTodo(<%= todo.id %>)" />
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Due Today (<span id="due-today-count"><%= dueToday.length %></span>)</h2>
    <ul>
      <% dueToday.forEach(todo => { %>
        <li>
          <label for="todo-<%= todo.id %>">
            <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="updateTodo(<%= todo.id %>)" />
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Due Later (<span id="due-later-count"><%= dueLater.length %></span>)</h2>
    <ul>
      <% dueLater.forEach(todo => { %>
        <li>
          <label for="todo-<%= todo.id %>">
            <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="updateTodo(<%= todo.id %>)" />
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Completed (<span id="completed-count"><%= completed.length %></span>)</h2>
    <ul>
      <% completed.forEach(todo => { %>
        <li>
          <label for="todo-<%= todo.id %>">
            <input type="checkbox" id="todo-<%= todo.id %>" checked onclick="updateTodo(<%= todo.id %>)" />
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
        </li>
      <% }) %>
    </ul>
  </section>

  <table border="1">
    <thead>
      <tr>
        <th>Title</th>
        <th>Due Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="todo-table-body">
      <% [...overdue, ...dueToday, ...dueLater, ...completed].forEach(todo => { %>
        <tr>
          <td><%= todo.title %></td>
          <td><%= todo.dueDate %></td>
          <td><%= todo.completed ? "Completed" : "Pending" %></td>
          <td>
            <button onclick="updateTodo(<%= todo.id %>)"><%= todo.completed ? "Undo" : "Complete" %></button>
            <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <footer>
    <p>Todo Application Footer</p>
  </footer>

  <script src="/index.js"></script>
</body>
</html>
