<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">

  <script>
    function updateTodo(id) {
      fetch(`/todos/${id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          _csrf: document.querySelector('meta[name="csrf-token"]').content
        })
      })
      .then(res => {
        if (res.ok) {
          window.location.reload();
        }
      })
      .catch(err => console.error(err));
    }

    function deleteTodo(id) {
      fetch(`/todos/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          _csrf: document.querySelector('meta[name="csrf-token"]').content
        })
      })
      .then(res => {
        if (res.ok) {
          window.location.reload();
        }
      })
      .catch(err => console.error(err));
    }
  </script>
</head>

<body>
  <header>
    <h1>Todo Application</h1>
  </header>

  <form method="POST" action="/todos">
    <input type="text" name="title" placeholder="Title" required />
    <input type="date" name="dueDate" required />
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit">Add Todo</button>
  </form>

  <section>
    <h2>Overdue (<span id="overdue-count"><%= overdue.length %></span>)</h2>
    <ul>
      <% overdue.forEach(todo => { %>
        <li>
          <input 
            id="todo-<%= todo.id %>" 
            type="checkbox" 
            <% if (todo.completed) { %> checked <% } %> 
            onclick="updateTodo(<%= todo.id %>)"
          />
          <label for="todo-<%= todo.id %>">
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Due Today (<span id="due-today-count"><%= dueToday.length %></span>)</h2>
    <ul>
      <% dueToday.forEach(todo => { %>
        <li>
          <input 
            id="todo-<%= todo.id %>" 
            type="checkbox" 
            <% if (todo.completed) { %> checked <% } %> 
            onclick="updateTodo(<%= todo.id %>)"
          />
          <label for="todo-<%= todo.id %>">
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Due Later (<span id="due-later-count"><%= dueLater.length %></span>)</h2>
    <ul>
      <% dueLater.forEach(todo => { %>
        <li>
          <input 
            id="todo-<%= todo.id %>" 
            type="checkbox" 
            <% if (todo.completed) { %> checked <% } %> 
            onclick="updateTodo(<%= todo.id %>)"
          />
          <label for="todo-<%= todo.id %>">
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
      <% }) %>
    </ul>
  </section>

  <section>
    <h2>Completed (<span id="completed-count"><%= completed.length %></span>)</h2>
    <ul>
      <% completed.forEach(todo => { %>
        <li>
          <input 
            id="todo-<%= todo.id %>" 
            type="checkbox" 
            checked
            onclick="updateTodo(<%= todo.id %>)"
          />
          <label for="todo-<%= todo.id %>">
            <%= todo.title %> (Due: <%= todo.dueDate %>)
          </label>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
      <% }) %>
    </ul>
  </section>

  <footer>
    <p>Todo Application Footer</p>
  </footer>
</body>
</html>
