<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('header') %>

  <main>
    <!-- Form to add new Todo -->
    <section>
      <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" name="title" placeholder="Enter todo title" required />
        <input type="date" name="dueDate" required />
        <button type="submit">Add Todo</button>
      </form>
    </section>

    <% function renderTodos(title, list, id) { %>
      <section>
        <h2><%= title %></h2>
        <p id="count-<%= id %>"><%= list.length %> <%= title.toLowerCase() %> tasks</p>
        <table>
          <% list.forEach(todo => { %>
            <tr class="Todo-Item">
              <td>
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %>
                       onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)" />
                <label for="todo-<%= todo.id %>">
                  <%= todo.title %> - <%= todo.dueDate %>
                </label>
              </td>
              <td>
                <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
              </td>
            </tr>
          <% }) %>
        </table>
      </section>
    <% } %>

    <%- renderTodos("Overdue", overdue, "overdue") %>
    <%- renderTodos("Due Today", dueToday, "due-today") %>
    <%- renderTodos("Due Later", dueLater, "due-later") %>
    <%- renderTodos("Completed", completedItems, "completed") %>

  </main>

  <%- include('footer') %>

  <script>
    const csrfToken = document.querySelector('input[name="_csrf"]').value;

    async function deleteTodo(id) {
      await fetch(`/todos/${id}`, {
        method: "DELETE",
        headers: {
          "X-CSRF-Token": csrfToken,
        },
      });
      window.location.reload();
    }

    async function toggleCompleted(id, currentStatus) {
      await fetch(`/todos/${id}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": csrfToken,
        },
        body: JSON.stringify({ completed: !currentStatus }),
      });
      window.location.reload();
    }
  </script>
</body>
</html>
