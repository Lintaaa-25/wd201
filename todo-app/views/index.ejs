<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo App</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Todo List</h1>

    <!-- Form to Add a New Todo -->
    <form action="/todos" method="POST" class="todo-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <input type="text" name="title" placeholder="Todo title" required />
      <input type="date" name="dueDate" required />
      <button type="submit">Add Todo</button>
    </form>

    <% function renderTodos(title, todos) { %>
      <h2><%= title %></h2>
      <ul class="list-none">
        <% todos.forEach(todo => { %>
          <li class="Todo-Item">
            <div class="flex items-center w-full my-2 px-2 py-1 rounded hover:bg-purple-50">
              <input 
                id="todo-checkbox-<%= todo.id %>" 
                type="checkbox" 
                <%= todo.completed ? 'checked' : '' %> 
                onclick="toggleTodo(<%= todo.id %>, <%= !todo.completed %>)" 
                class="w-4 h-4"
              />
              <label for="todo-checkbox-<%= todo.id %>" class="ml-2 text-sm text-gray-600 cursor-pointer">
                <%= todo.title %> - Due: <%= todo.dueDate %>
              </label>
              <a 
                href="javascript:void(0);" 
                onclick="deleteTodo(<%= todo.id %>)" 
                class="ml-3 text-red-500 hover:text-red-700"
              >
                üóëÔ∏è
              </a>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } %>

    <% renderTodos("Overdue", overdue); %>
    <% renderTodos("Due Today", dueToday); %>
    <% renderTodos("Due Later", dueLater); %>
    <% renderTodos("Completed", completed); %>
  </div>

  <script>
    const csrfToken = "<%= csrfToken %>";

    function toggleTodo(id, completed) {
      fetch(`/todos/${id}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": csrfToken
        },
        body: JSON.stringify({ completed })
      }).then(() => window.location.reload());
    }

    function deleteTodo(id) {
      fetch(`/todos/${id}`, {
        method: "DELETE",
        headers: {
          "X-CSRF-Token": csrfToken
        }
      }).then(() => window.location.reload());
    }
  </script>
</body>
</html>
