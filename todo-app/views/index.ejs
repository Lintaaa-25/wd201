<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo App</title>
  <link rel="stylesheet" href="/main.css" />
</head>
<body>
  <header>
    <h1>Todo Application</h1>
  </header>

  <!-- New Todo Form -->
  <form action="/todos" method="POST" id="new-todo-form">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="text" name="title" placeholder="Todo title" required />
    <input type="date" name="dueDate" required />
    <button type="submit">Add</button>
  </form>

  <!-- Overdue Todos -->
  <section>
    <h2>Overdue</h2>
    <div id="count-overdue"><%= overdue.length %></div>
    <table>
      <tbody>
        <% overdue.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="toggleComplete(<%= todo.id %>, this.checked)">
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <!-- Due Today -->
  <section>
    <h2>Due Today</h2>
    <div id="count-due-today"><%= dueToday.length %></div>
    <table>
      <tbody>
        <% dueToday.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="toggleComplete(<%= todo.id %>, this.checked)">
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <!-- Due Later -->
  <section>
    <h2>Due Later</h2>
    <div id="count-due-later"><%= dueLater.length %></div>
    <table>
      <tbody>
        <% dueLater.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? "checked" : "" %> onclick="toggleComplete(<%= todo.id %>, this.checked)">
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <!-- Completed -->
  <section>
    <h2>Completed</h2>
    <div id="count-completed"><%= completedItems.length %></div>
    <table>
      <tbody>
        <% completedItems.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" checked onclick="toggleComplete(<%= todo.id %>, this.checked)">
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <footer>
    <p>Made with ðŸ’–</p>
  </footer>

  <!-- Client-side JS -->
  <script>
    async function toggleComplete(id, completed) {
      await fetch(`/todos/${id}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": "<%= csrfToken %>"
        },
        body: JSON.stringify({ completed })
      });
      window.location.reload();
    }

    async function deleteTodo(id) {
      await fetch(`/todos/${id}`, {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": "<%= csrfToken %>"
        }
      });
      window.location.reload();
    }
  </script>
</body>
</html>
