<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <header class="bg-blue-500 text-white p-4 text-center">
    <h1 class="text-3xl">Todo Application</h1>
  </header>

  <div class="max-w-4xl mx-auto p-6">
    <!-- Add Todo Form -->
    <form method="POST" action="/todos" class="flex flex-col sm:flex-row items-center bg-white p-4 rounded shadow-md gap-2 mb-6">
      <input type="text" name="title" placeholder="Title" required class="border p-2 rounded w-full sm:w-auto">
      <input type="date" name="dueDate" required class="border p-2 rounded w-full sm:w-auto">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Add Todo</button>
    </form>

    <!-- Overdue Todos -->
    <section>
      <h2 class="text-xl font-semibold">Overdue (<span id="overdue-count"><%= overdue.length %></span>)</h2>
      <ul class="space-y-4">
        <% overdue.forEach(todo => { %>
        <li class="flex items-center justify-between bg-white p-4 rounded shadow-md">
          <div class="flex items-center gap-4">
            <input 
              id="todo-<%= todo.id %>" 
              type="checkbox" 
              <% if (todo.completed) { %> checked <% } %> 
              onclick="updateTodo(<%= todo.id %>)"
              class="h-5 w-5"
            />
            <label for="todo-<%= todo.id %>" class="<%= todo.completed ? 'line-through text-gray-500' : '' %>">
              <%= todo.title %> (Due: <%= todo.dueDate %>)
            </label>
          </div>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-700 hover:bg-red-100 p-2 rounded-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
        <% }) %>
      </ul>
    </section>

    <!-- Due Today Todos -->
    <section>
      <h2 class="text-xl font-semibold">Due Today (<span id="due-today-count"><%= dueToday.length %></span>)</h2>
      <ul class="space-y-4">
        <% dueToday.forEach(todo => { %>
        <li class="flex items-center justify-between bg-white p-4 rounded shadow-md">
          <div class="flex items-center gap-4">
            <input 
              id="todo-<%= todo.id %>" 
              type="checkbox" 
              <% if (todo.completed) { %> checked <% } %> 
              onclick="updateTodo(<%= todo.id %>)"
              class="h-5 w-5"
            />
            <label for="todo-<%= todo.id %>" class="<%= todo.completed ? 'line-through text-gray-500' : '' %>">
              <%= todo.title %> (Due: <%= todo.dueDate %>)
            </label>
          </div>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-700 hover:bg-red-100 p-2 rounded-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
        <% }) %>
      </ul>
    </section>

    <!-- Due Later Todos -->
    <section>
      <h2 class="text-xl font-semibold">Due Later (<span id="due-later-count"><%= dueLater.length %></span>)</h2>
      <ul class="space-y-4">
        <% dueLater.forEach(todo => { %>
        <li class="flex items-center justify-between bg-white p-4 rounded shadow-md">
          <div class="flex items-center gap-4">
            <input 
              id="todo-<%= todo.id %>" 
              type="checkbox" 
              <% if (todo.completed) { %> checked <% } %> 
              onclick="updateTodo(<%= todo.id %>)"
              class="h-5 w-5"
            />
            <label for="todo-<%= todo.id %>" class="<%= todo.completed ? 'line-through text-gray-500' : '' %>">
              <%= todo.title %> (Due: <%= todo.dueDate %>)
            </label>
          </div>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-700 hover:bg-red-100 p-2 rounded-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
        <% }) %>
      </ul>
    </section>

    <!-- Completed Todos -->
    <section>
      <h2 class="text-xl font-semibold">Completed (<span id="completed-count"><%= completed.length %></span>)</h2>
      <ul class="space-y-4">
        <% completed.forEach(todo => { %>
        <li class="flex items-center justify-between bg-white p-4 rounded shadow-md">
          <div class="flex items-center gap-4">
            <input 
              id="todo-<%= todo.id %>" 
              type="checkbox" 
              <% if (todo.completed) { %> checked <% } %> 
              onclick="updateTodo(<%= todo.id %>)"
              class="h-5 w-5"
            />
            <label for="todo-<%= todo.id %>" class="<%= todo.completed ? 'line-through text-gray-500' : '' %>">
              <%= todo.title %> (Due: <%= todo.dueDate %>)
            </label>
          </div>
          <a href="javascript:void(0);" onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-700 hover:bg-red-100 p-2 rounded-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0l-.346-9m9.708-3.75H5.25m16.5 0a2.25 2.25 0 01-2.25 2.25h-13.5a2.25 2.25 0 01-2.25-2.25m16.5 0V5.25A2.25 2.25 0 0018.75 3h-13.5a2.25 2.25 0 00-2.25 2.25v.75" />
            </svg>
          </a>
        </li>
        <% }) %>
      </ul>
    </section>

  </div>

  <script>
    function updateTodo(id) {
      fetch(`/todos/${id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(todo => {
        const checkbox = document.getElementById(`todo-${todo.id}`);
        checkbox.checked = todo.completed;
      });
    }

    function deleteTodo(id) {
      fetch(`/todos/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.querySelector(`#todo-${id}`).parentElement.remove();
        }
      });
    }
  </script>

</body>
</html>
