<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('header') %>

  <main>
    <section>
      <form action="/todos" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <input type="text" name="title" id="title" placeholder="Enter todo title" required />
  <input type="date" name="dueDate" id="dueDate" required />
  <button type="submit" id="submit">Add Todo</button>
</form>

    </section>

    <section>
      <h2>Overdue</h2>
      <p id="overdue-count"><%= overdue.length %> overdue tasks</p>
      <table>
        <% overdue.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <section>
      <h2>Due Today</h2>
      <p id="due-today-count"><%= dueToday.length %> tasks due today</p>
      <table>
        <% dueToday.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <section>
      <h2>Due Later</h2>
      <p id="due-later-count"><%= dueLater.length %> tasks due later</p>
      <table>
        <% dueLater.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <section>
      <h2>Completed</h2>
      <p id="completed-count"><%= completedItems.length %> completed tasks</p>
      <table>
        <% completedItems.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" checked />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

  </main>

  <%- include('footer') %>

  <script>
    async function toggleTodo(id, completed) {
      await fetch(`/todos/${id}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ completed }),
      });
      window.location.reload();
    }

    async function deleteTodo(id) {
      if (confirm("Are you sure you want to delete?")) {
        await fetch(`/todos/${id}`, {
          method: "DELETE",
        });
        window.location.reload();
      }
    }
  </script>

</body>
</html>
