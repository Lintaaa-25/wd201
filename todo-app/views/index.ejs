<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css" />
<meta name="csrf-token" content="<%= csrfToken %>">

</head>
<body>
  <%- include("header") %>

  <main>
    <section>
      <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" name="title" placeholder="Enter todo title" required />
        <input type="date" name="dueDate" required />
        <button type="submit">Add Todo</button>
      </form>
    </section>

    <% const renderTodos = (todos) => { %>
      <% todos.forEach(todo => { %>
        <tr class="Todo-Item">
          <td>
            <label>
              <input
                type="checkbox"
                onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)"
                <%= todo.completed ? 'checked' : '' %>
              />
              <%= todo.title %> - <%= todo.dueDate %>
            </label>
          </td>
          <td>
            <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
          </td>
        </tr>
      <% }) %>
    <% } %>

    <section>
      <h2>Overdue</h2>
      <p id="count-overdue"><%= overdue.length %> overdue tasks</p>
      <table><tbody><%= renderTodos(overdue) %></tbody></table>
    </section>

    <section>
      <h2>Due Today</h2>
      <p id="count-due-today"><%= dueToday.length %> tasks due today</p>
      <table><tbody><%= renderTodos(dueToday) %></tbody></table>
    </section>

    <section>
      <h2>Due Later</h2>
      <p id="count-due-later"><%= dueLater.length %> tasks due later</p>
      <table><tbody><%= renderTodos(dueLater) %></tbody></table>
    </section>

    <section>
      <h2>Completed</h2>
      <p id="count-completed"><%= completedItems.length %> completed tasks</p>
      <table><tbody><%= renderTodos(completedItems) %></tbody></table>
    </section>
  </main>

  <%- include("footer") %>

  <script>
  // Function to get CSRF token from meta tag
  function getCsrfToken() {
    return document.querySelector('meta[name="csrf-token"]').getAttribute('content');
  }

  // Function to delete a Todo item
  async function deleteTodo(id) {
    const csrfToken = getCsrfToken();
    await fetch(`/todos/${id}`, {
      method: "DELETE",
      headers: {
        "X-CSRF-Token": csrfToken,
      },
    });
    window.location.reload();
  }

  // Function to toggle the completion status of a Todo item
  async function toggleCompleted(id, currentStatus) {
    const csrfToken = getCsrfToken();
    await fetch(`/todos/${id}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json",
        "X-CSRF-Token": csrfToken,
      },
      body: JSON.stringify({
        completed: !currentStatus,
      }),
    });
    window.location.reload();
  }
</script>

</body>
</html>
