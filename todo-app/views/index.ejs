<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('header') %>

  <main>
    <!-- Form to add new Todo -->
    <section>
      <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" name="title" placeholder="Enter todo title" required />
        <input type="date" name="dueDate" required />
        <button type="submit">Add Todo</button>
      </form>
    </section>

    <!-- Overdue Todo section -->
    <section>
      <h2>Overdue</h2>
      <p id="count-overdue"><%= overdue.length %> overdue tasks</p>
      <table>
        <% overdue.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? 'checked' : '' %> onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Today Todo section -->
    <section>
      <h2>Due Today</h2>
      <p id="count-due-today"><%= dueToday.length %> tasks due today</p>
      <table>
        <% dueToday.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? 'checked' : '' %> onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Later Todo section -->
    <section>
      <h2>Due Later</h2>
      <p id="count-due-later"><%= dueLater.length %> tasks due later</p>
      <table>
        <% dueLater.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" <%= todo.completed ? 'checked' : '' %> onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Completed Todo section -->
    <section>
      <h2>Completed</h2>
      <p id="count-completed"><%= completedItems.length %> completed tasks</p>
      <table>
        <% completedItems.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" checked onchange="toggleCompleted(<%= todo.id %>, <%= todo.completed %>)" />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

  </main>

  <%- include('footer') %>

  <script>
    // Function to delete a Todo item
    async function deleteTodo(id) {
      await fetch(`/todos/${id}`, {
        method: "DELETE",
      });
      window.location.reload(); // Reload the page to reflect changes
    }

    // Function to toggle the completion status of a Todo item
    async function toggleCompleted(id, currentStatus) {
      await fetch(`/todos/${id}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          completed: !currentStatus, // Toggle the current completion status
        }),
      });
      window.location.reload(); // Reload to update the UI after toggling
    }
  </script>

</body>
</html>

