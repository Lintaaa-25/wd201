<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('header') %>

  <main>
    <!-- Add Todo Form -->
    <section>
      <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" name="title" placeholder="Enter todo title" required />
        <input type="date" name="dueDate" required />
        <button type="submit">Add Todo</button>
      </form>
    </section>

    <!-- Overdue Section -->
    <section>
      <h2>Overdue</h2>
      <p id="count-overdue"><%= overdue.length %> overdue tasks</p>
      <table>
        <% overdue.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" <%= todo.completed ? 'checked' : '' %> />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Today Section -->
    <section>
      <h2>Due Today</h2>
      <p id="count-due-today"><%= dueToday.length %> tasks due today</p>
      <table>
        <% dueToday.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" <%= todo.completed ? 'checked' : '' %> />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Due Later Section -->
    <section>
      <h2>Due Later</h2>
      <p id="count-due-later"><%= dueLater.length %> tasks due later</p>
      <table>
        <% dueLater.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" <%= todo.completed ? 'checked' : '' %> />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

    <!-- Completed Section -->
    <section>
      <h2>Completed</h2>
      <p id="count-completed"><%= completedItems.length %> completed tasks</p>
      <table>
        <% completedItems.forEach(todo => { %>
          <tr class="Todo-Item">
            <td>
              <label for="todo-<%= todo.id %>">
                <input type="checkbox" id="todo-<%= todo.id %>" onchange="toggleTodo(<%= todo.id %>, this.checked)" checked />
                <%= todo.title %> - <%= todo.dueDate %>
              </label>
            </td>
            <td>
              <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>

  </main>

  <%- include('footer') %>

  <script>
    // Function to toggle todo completion
    async function toggleTodo(id, completed) {
      try {
        const response = await fetch(`/todos/${id}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": document.querySelector('input[name="_csrf"]').value, // CSRF token
          },
          body: JSON.stringify({ completed })
        });

        if (response.ok) {
          window.location.reload(); // Reload to reflect changes
        } else {
          alert("Failed to update the todo completion");
        }
      } catch (err) {
        console.error(err);
        alert("Error while toggling completion");
      }
    }

    // Function to delete a todo
    async function deleteTodo(id) {
      if (confirm("Are you sure you want to delete this todo?")) {
        try {
          const response = await fetch(`/todos/${id}`, {
            method: "DELETE",
            headers: {
              "X-CSRF-Token": document.querySelector('input[name="_csrf"]').value, // CSRF token
            }
          });

          if (response.ok) {
            window.location.reload(); // Reload to reflect changes
          } else {
            alert("Failed to delete the todo");
          }
        } catch (err) {
          console.error(err);
          alert("Error while deleting todo");
        }
      }
    }
  </script>

</body>
</html>
