<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do Manager</title>
</head>
<body>
  <div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">
      <%- include('header') %>

      <form action="/todos" method="POST" class="flex items-center my-2" id="todo-form">
        <div class="flex-auto">
          <input type="text" name="title" placeholder="What's next?" required class="border border-gray-300 rounded p-1 w-full" />
        </div>
        <div class="flex-auto">
          <input type="date" name="dueDate" required class="border border-gray-300 rounded text-gray-900 w-full p-1" />
        </div>
        <div class="flex-none">
          <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-semibold">Add</button>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>

      <%- include('todos', { overdue, dueToday, dueLater, completed, csrfToken }) %>

      <%- include('footer') %>
    </div>
  </div>
  <script src="/script.js"></script>
</body>
</html>
