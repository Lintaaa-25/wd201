<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo App</title>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-100 font-sans text-gray-800 min-h-screen">

  <header class="bg-blue-600 text-white p-6 text-center shadow-md">
    <h1 class="text-4xl font-bold">Todo Application</h1>
  </header>

  <main class="max-w-4xl mx-auto p-6 space-y-10">

    <!-- Add Todo Form -->
    <form method="POST" action="/todos" class="flex flex-col sm:flex-row items-center bg-white p-6 rounded-lg shadow gap-4">
      <input type="text" name="title" placeholder="Todo Title" required class="border p-3 rounded w-full sm:flex-1 focus:ring-2 focus:ring-blue-400">
      <input type="date" name="dueDate" required class="border p-3 rounded w-full sm:w-48 focus:ring-2 focus:ring-blue-400">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded font-semibold transition-all">
        Add
      </button>
    </form>

    <!-- Overdue Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Overdue (<%= overdue.length %>)</h2>
      <ul class="space-y-4">
        <% overdue.forEach(todo => { %>
          <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="flex items-center gap-4">
              <input 
                id="todo-<%= todo.id %>" 
                type="checkbox" 
                <% if (todo.completed) { %> checked <% } %> 
                onclick="updateTodo(<%= todo.id %>)"
                class="h-5 w-5 text-blue-500 focus:ring-2 focus:ring-blue-400"
              />
              <label for="todo-<%= todo.id %>" class="cursor-pointer text-lg <%= todo.completed ? 'line-through text-gray-400' : '' %>">
                <%= todo.title %> 
                <span class="text-sm text-gray-500 ml-2">(Due: <%= todo.dueDate %>)</span>
              </label>
            </div>
            <button onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-600 hover:bg-red-100 p-2 rounded-full transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </li>
        <% }) %>
      </ul>
    </section>

    <!-- Due Today Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Due Today (<%= dueToday.length %>)</h2>
      <ul class="space-y-4">
        <% dueToday.forEach(todo => { %>
          <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="flex items-center gap-4">
              <input 
                id="todo-<%= todo.id %>" 
                type="checkbox" 
                <% if (todo.completed) { %> checked <% } %> 
                onclick="updateTodo(<%= todo.id %>)"
                class="h-5 w-5 text-blue-500 focus:ring-2 focus:ring-blue-400"
              />
              <label for="todo-<%= todo.id %>" class="cursor-pointer text-lg <%= todo.completed ? 'line-through text-gray-400' : '' %>">
                <%= todo.title %> 
                <span class="text-sm text-gray-500 ml-2">(Due: <%= todo.dueDate %>)</span>
              </label>
            </div>
            <button onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-600 hover:bg-red-100 p-2 rounded-full transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </li>
        <% }) %>
      </ul>
    </section>

    <!-- Due Later Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Due Later (<%= dueLater.length %>)</h2>
      <ul class="space-y-4">
        <% dueLater.forEach(todo => { %>
          <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="flex items-center gap-4">
              <input 
                id="todo-<%= todo.id %>" 
                type="checkbox" 
                <% if (todo.completed) { %> checked <% } %> 
                onclick="updateTodo(<%= todo.id %>)"
                class="h-5 w-5 text-blue-500 focus:ring-2 focus:ring-blue-400"
              />
              <label for="todo-<%= todo.id %>" class="cursor-pointer text-lg <%= todo.completed ? 'line-through text-gray-400' : '' %>">
                <%= todo.title %> 
                <span class="text-sm text-gray-500 ml-2">(Due: <%= todo.dueDate %>)</span>
              </label>
            </div>
            <button onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-600 hover:bg-red-100 p-2 rounded-full transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </li>
        <% }) %>
      </ul>
    </section>

    <!-- Completed Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Completed (<%= completed.length %>)</h2>
      <ul class="space-y-4">
        <% completed.forEach(todo => { %>
          <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="flex items-center gap-4">
              <input 
                id="todo-<%= todo.id %>" 
                type="checkbox" 
                <% if (todo.completed) { %> checked <% } %> 
                onclick="updateTodo(<%= todo.id %>)"
                class="h-5 w-5 text-blue-500 focus:ring-2 focus:ring-blue-400"
              />
              <label for="todo-<%= todo.id %>" class="cursor-pointer text-lg <%= todo.completed ? 'line-through text-gray-400' : '' %>">
                <%= todo.title %> 
                <span class="text-sm text-gray-500 ml-2">(Due: <%= todo.dueDate %>)</span>
              </label>
            </div>
            <button onclick="deleteTodo(<%= todo.id %>)" class="text-red-500 hover:text-red-600 hover:bg-red-100 p-2 rounded-full transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </li>
        <% }) %>
      </ul>
    </section>

  </main>

  <script>
    function getCsrfToken() {
      return document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    }

    function updateTodo(id) {
      fetch(`/todos/${id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'CSRF-Token': getCsrfToken()
        },
      })
      .then(response => response.json())
      .then(todo => {
        const checkbox = document.getElementById(`todo-${todo.id}`);
        checkbox.checked = todo.completed;
      })
      .catch(error => console.error('Error updating todo:', error));
    }

    function deleteTodo(id) {
      if (confirm('Are you sure you want to delete this todo?')) {
        fetch(`/todos/${id}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'CSRF-Token': getCsrfToken()
          },
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            document.getElementById(`todo-${id}`).closest('li').remove();
          }
        })
        .catch(error => console.error('Error deleting todo:', error));
      }
    }
  </script>

</body>
</html>
