<section class="my-4">
  <h5>Overdue (<span id="count-overdue"><%= overdue.length %></span>)</h5>
  <table class="table-auto w-full">
    <% overdue.forEach(todo => { %>
      <tr class="Todo-Item group">
        <td>
          <input type="checkbox" class="todo-checkbox" id="todo-<%= todo.id %>" data-id="<%= todo.id %>" data-csrf="<%= csrfToken %>">
        </td>
        <td>
          <label for="todo-<%= todo.id %>"><%= todo.title %></label>
        </td>
        <td>
          <button class="delete-button hidden group-hover:inline-block text-red-600" data-id="<%= todo.id %>" data-csrf="<%= csrfToken %>">
            🗑️
          </button>
        </td>
      </tr>
    <% }) %>
  </table>

  <!-- Repeat similarly for Due Today, Due Later, Completed with same structure -->
</section>
